{
    "name": "@gander-tools/playground",
    "version": "0.0.7",
    "license": "MIT",
    "type": "commonjs",
    "engines": {
        "node": ">=18"
    },
    "author": "Adam GÄ…sowski",
    "bugs": {
        "url": "https://github.com/gander-tools/playground-js-lib/issues"
    },
    "repository": {
        "url": "https://github.com/gander-tools/playground-js-lib"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.cts",
    "exports": {
        "require": {
            "types": "./dist/index.d.cts",
            "default": "./dist/index.cjs"
        },
        "import": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "lint:format": "prettier --check .",
        "lint:package": "publint --pack auto",
        "prepack": "pkgroll --clean-dist --sourcemap --minify",
        "release": "release-it --only-version",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "test:run": "vitest run",
        "test:types": "tsc --noEmit",
        "test:watch": "vitest watch"
    },
    "devDependencies": {
        "@antfu/ni": "^23.2.0",
        "@eslint/js": "^9.18.0",
        "@release-it/bumper": "^7.0.0",
        "@release-it/conventional-changelog": "^10.0.0",
        "@types/bun": "^1.1.16",
        "@types/node": "^22.10.5",
        "@vitest/coverage-v8": "2.1.8",
        "@vitest/ui": "^2.1.8",
        "@vue/reactivity": "^3.5.13",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^9.1.0",
        "pkgroll": "^2.6.1",
        "prettier": "3.4.2",
        "publint": "^0.3.1",
        "release-it": "^18.1.1",
        "typescript-eslint": "^8.19.1",
        "vitest": "^2.1.8"
    },
    "peerDependencies": {
        "@vue/reactivity": "^3.0.0"
    }
}
