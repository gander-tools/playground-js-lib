{
    "name": "@gander-tools/playground",
    "version": "0.10.11",
    "license": "MIT",
    "type": "commonjs",
    "engines": {
        "node": "^20 || >=22"
    },
    "author": "Adam GÄ…sowski",
    "bugs": {
        "url": "https://github.com/gander-tools/playground-js-lib/issues"
    },
    "repository": {
        "url": "git+https://github.com/gander-tools/playground-js-lib.git"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.cts",
    "exports": {
        "require": {
            "types": "./dist/index.d.cts",
            "default": "./dist/index.cjs"
        },
        "import": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "check": "biome check",
        "check:fix": "biome check --write",
        "format": "biome format",
        "format:fix": "biome format --write",
        "lint": "biome lint",
        "lint:fix": "biome lint --write",
        "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
        "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\"",
        "prepare": "lefthook install",
        "prepack": "pkgroll --clean-dist --sourcemap --minify",
        "publint": "publint --pack auto",
        "release": "release-it --only-version",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "test:run": "vitest run",
        "test:watch": "vitest watch",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.13",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@release-it/bumper": "7.0.5",
        "@types/node": "24.10.9",
        "@vitest/coverage-v8": "4.0.18",
        "@vitest/ui": "4.0.18",
        "@vue/reactivity": "3.5.27",
        "git-cliff": "2.12.0",
        "lefthook": "2.0.16",
        "markdownlint-cli2": "^0.20.0",
        "pkgroll": "2.26.0",
        "publint": "0.3.17",
        "release-it": "19.2.4",
        "typescript": "5.9.3",
        "vitest": "4.0.18"
    },
    "peerDependencies": {
        "@vue/reactivity": "^3.0.0",
        "typescript": "^4.1 || ^5.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        },
        "@vue/reactivity": {
            "optional": true
        }
    }
}
