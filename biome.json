{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "useEditorconfig": true,
        "lineEnding": "lf",
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": ["**/dist", "**/coverage", "**/node_modules"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
